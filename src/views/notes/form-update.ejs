<%- include('../partials/header', {title: 'Update note'})%>
    <div class="col-md-4 mx-auto m-3">
      <div class="card">
        <div class="card-header">
          <h3>Edit note</h3>
        </div>
        <div class="card-body">
          <form action="/api/v1/notes/<%= note.id%>?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <input type="text" class="form-control" name="title" placeholder="Title" value="<%= note.title%>">
            </div>
            <div class="form-group mt-1">
              <textarea name="description" class="form-control" placeholder="Description..." ><%= note.description%></textarea>
            </div>
            <div class="from-group mt-1">
              <button class="btn btn-primary btn-block w-100" type="submit">
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <%- include('../partials/footer')%>